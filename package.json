{
  "name": "story-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
 "scripts": {
  /* 1 · Compile Tailwind once -------------------------------------------- */
  "tw": "npx tailwindcss -i ./src/index.css -o ./src/tw.css",

  /* 2 · Dev server: watch Tailwind + run Vite ---------------------------- */
  "dev": "npx tailwindcss -i ./src/index.css -o ./src/tw.css --watch & vite dev",

  /* 3 · Production build: compile Tailwind first, then Vite ------------- */
  "build": "npm run tw && vite build"
},
  "dependencies": {
    "@supabase/supabase-js": "^2.51.0",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "googleapis": "^152.0.0",
    "openai": "^5.9.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  }
}
